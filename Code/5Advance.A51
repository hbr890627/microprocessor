		ORG 0000H
		MOV SP, #32H
LOOP:	MOV A, #0FCH
		MOV P2, A
		MOV R0, #8
		JMP AAA
AAA:	SETB P1.0
		SETB P1.1
		CALL DELAY
		JNB P1.0, SAVE
		JNB P1.1, LOAD		
BBB:	RL A
		MOV P2,A
		DJNZ R0,AAA
		JMP LOOP
SAVE:	CALL DELAY2
		MOV R1,A
		PUSH 01H
		JMP BBB
LOAD:	CALL DELAY
		POP 0A0H
		JMP LOAD
DELAY: 	MOV R3,#250
DELAY1:	MOV R4,#250
		DJNZ R4, $
		DJNZ R3, DELAY1
		RET
DELAY2: MOV R4, #250
		DJNZ R4, $
		RET
		END